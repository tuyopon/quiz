package quiz;

import java.util.Scanner;


public class Answer {
	void answer(){
		Question num = new Question();
		int a = num.rand();


		Scanner scanner = new Scanner(System.in);
		int kai = scanner.nextInt();

		if(a == 0) {
			if(kai == 4) {
				System.out.println("正解");
			}else {
				System.out.println("不正解");
			}
		}
		if(a == 1) {
			if(kai == 2) {
				System.out.println("正解");
			}else {
				System.out.println("不正解");
			}
		}


		scanner.close();
	}
}
